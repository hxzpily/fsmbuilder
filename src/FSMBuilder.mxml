<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   width="1000"
					   height="1000" xmlns:local="*" xmlns:model="model.*" xmlns:view="view.*" xmlns:diagram="model.diagram.*" xmlns:autoupdate="utils.autoupdate.*" xmlns:code="model.code.*"
					   >
	<fx:Script>
		<![CDATA[
			import utils.autoupdate.AutoUpdater;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<diagram:FSMModel id="FSMmodel"/>
		<code:ProjectModel id="projectModel"/>
		<autoupdate:AutoUpdater id="autoUpdater" />
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import utils.system.FileSystemService;
			import model.diagram.StateVO;
			
			import mx.events.FlexEvent;
			
			import spark.events.IndexChangeEvent;
			
			import view.DefaultStateObject;
			import view.TransitionObject;
			
			import utils.writers.ActionScriptWriter;
			
			
			protected function save():void
			{
				FileSystemService.writeObjectToFile(FSMmodel, "FSMModel.fsm");
			}
			
			protected function load():void
			{
				FSMmodel = FileSystemService.readObjectFromFile("FSMModel.fsm") as FSMModel;
			}
			
			protected function viewChange(event:IndexChangeEvent):void
			{
				if (event.newIndex == 1 && output)
					outputUpdate();
			}
			
			protected function outputUpdate(event:FlexEvent = null):void
			{
				output.text = new ActionScriptWriter().getFileContent(FSMmodel);
			}
			
		]]>
	</fx:Script>
	
	<s:VGroup width="100%" height="100%">
		<!-- Create a Spark ButtonBar control to navigate 
		the ViewStack container. -->
		<s:ButtonBar dataProvider="{myViewStack}" change="viewChange(event)"/>
		
		<!-- Define the ViewStack and the three child containers. -->
		<mx:ViewStack id="myViewStack" 
					  borderStyle="solid"
					  height="100%"
					  width="100%">
			
			<s:NavigatorContent id="createContent" label="Diagram">
				<s:HGroup width="100%" height="100%">
					<s:VGroup height="100%">
						<s:Button id="loadFile" label="load.." click="load()"/>
						<s:Button id="saveFile" label="save.." click="save()"/>
						<s:Button id="createState" label="create state" click="diagram.stateCreate()"/>
					</s:VGroup>
					<view:Diagram id="diagram" FSMmodel="{FSMmodel}" width="100%" height="100%"  doubleClickEnabled="true" doubleClick="diagram.stateCreate(true)">
						
					</view:Diagram>
					<s:VGroup height="100%" width="200">
						<s:TextInput id="sourceInput" width="100%"/>
						<mx:Accordion width="200" resizeToContent="true">
							<s:NavigatorContent width="100%" height="100%" label="Model">
								<s:List width="100%" height="100%" dataProvider="{projectModel.models}"></s:List>
							</s:NavigatorContent>
							<s:NavigatorContent width="100%" height="100%" label="View">
								<s:List width="100%" height="100%" dataProvider="{projectModel.views}"></s:List>
							</s:NavigatorContent>
							<s:NavigatorContent width="100%" height="100%" label="Controller">
								<s:List width="100%" height="100%" dataProvider="{projectModel.controllers}"></s:List>
							</s:NavigatorContent>
						</mx:Accordion>
						
					</s:VGroup>
				</s:HGroup>
				<s:Label id="currentVersion" text="{AutoUpdater.versionString}" bottom="0" right="0"/>
			</s:NavigatorContent>
			
			<s:NavigatorContent id="outputContent" label="ActionScript">
				<view:CodePreview id="output" width="100%" height="100%" creationComplete="outputUpdate(event)"/>
			</s:NavigatorContent>
		</mx:ViewStack>
	</s:VGroup>
	
	
	
	
</s:WindowedApplication>
