<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 title="Project Root"
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="446" height="600">
	
	<fx:Script>
		<![CDATA[
			import model.code.ProjectModel;
			
			import mx.managers.PopUpManager;
			
			public var projectModel:ProjectModel;
			
			protected function clickHandler(event:MouseEvent):void
			{
				projectModel.sourceURL = tree.selectedPath;
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:VGroup left="5" right="5" height="528">
		<s:Spacer height="5" />
		<s:Label text="Select Project Root"/>
		<mx:HDividedBox width="100%" height="100%"> 
			<mx:FileSystemTree id="tree" width="343" height="494" enumerationMode="directoriesOnly" directory="{File.userDirectory}"/>     
		</mx:HDividedBox> 
	</s:VGroup>
	<s:Button right="10" bottom="10" label="Select" click="clickHandler(event)"/>
</s:TitleWindow>
